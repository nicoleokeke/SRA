{
    "compilerOptions": {
        "target": "ESNext",
        "outDir": "./build",
        "module": "commonjs",
        "types": [
            "node"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*.ts",
        "index.ts"
    ],
}